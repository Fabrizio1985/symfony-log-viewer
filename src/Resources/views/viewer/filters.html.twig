<div class="w-full px-4 md:px-0 md:mt-4 text-gray-800 leading-normal">

    <div class="flex flex-wrap">
    
        <div class="w-full">
        
            <div class="bg-white border rounded p-2 text-sm flex flex-col" style="margin-bottom: 5px">
            
            	<div class="flex">
	                <div class="flex space-x-5">
	                    <!--Filters-->
	                    <div class="flex flex-col space-y-2">
	                        <label for="date_filter" class="text-gray-700">Da</label>
	                        <input type="datetime-local" id="date-filter-from">
	                    </div>
	                    
	                    <div class="flex flex-col space-y-2">
	                        <label for="date_filter" class="text-gray-700">A</label>
	                        <input type="datetime-local" id="date-filter-to">
	                    </div>
	                    
	                    <div class="flex flex-col space-y-2">
	                        <label for="date_filter" class="text-gray-700">Level</label>
	                        <select class="h-10 pl-3 pr-6 w-40 md:w-auto text-base placeholder-gray-600 border rounded-md appearance-none focus:shadow-outline" id="level-filter">
	                            <option value="ALL">ALL</option>
	                            <option value="DEBUG">DEBUG</option>
	                            <option value="INFO">INFO</option>
	                            <option value="WARN">WARNING</option>
	                            <option value="ERROR">ERROR</option>
	                        </select>
	                    </div>
	                    
	                    <div class="flex flex-col justify-end space-y-2">
	                        <button id="apply-filter" type="button" class="rounded-sm focus:outline-none focus:shadow-outline inline-flex py-1 px-2 shadow bg-blue-500 text-white">
	                            Filter
	                        </button>
	                    </div>
	                    
	                    <!--/Filters-->
	                </div>
				</div>
				
				<div class="flex">
					<div class="flex flex-col space-y-2" style="flex: 1">
						<label for="select-column-field" class="text-gray-700">Colonne visibili</label>
						<select class="form-select" id="select-column-field" data-placeholder="Choose anything" style="" multiple>
							
							{% for key, group in groups %}
                            	<option value="{{ loop.index0 }}" {% if group.visible %} selected="selected" {% endif %} >{{ key|capitalize }}</option>
                            {% endfor %}
						</select>
					</div>
				</div>
            </div>
        </div>
    </div>

</div>