{% extends '@LogViewer/base.html.twig' %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script src="{{ asset('bundles/logviewer/js/logviewer.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    <!--Container-->
    <div class="w-full mx-auto pt-20">

        <div class="w-full px-4 md:px-0 md:mt-8 mb-16 text-gray-800 leading-normal">

            <!--Log Table-->
            <div class="flex flex-wrap">
                <div class="w-full p-3">
                    <!--Log Table-->
                    <div class="bg-white border rounded shadow p-2 text-sm">
                        <table id="logTable" data-remote-url="{{ path('kira_log_viewer.viewer.ajax') }}" class="logs-table table-auto w-full">
                            <thead>
                                <tr>
                                    <th>Datetime</th>
                                    <th>Context</th>
                                    <th>Level</th>
                                    <th>Description</th>
                                    <th>Content</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <!--/Log Table-->
                </div>
            </div>

            <!--/ Console Content-->
        </div>

    </div>
    <!--/container-->
{% endblock %}