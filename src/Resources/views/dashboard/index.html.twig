{% extends '@LogViewer/base.html.twig' %}

{% block body %}
<!--Container-->
<div class="container w-full mx-auto pt-20">

    <div class="w-full px-4 md:px-0 md:mt-8 mb-16 text-gray-800 leading-normal">

        <div class="flex flex-wrap">
            {% for block in blocks %}
            <div class="w-full md:w-1/2 xl:w-1/3 p-3">
                <!--Dashboard Card-->
                <div class="bg-white border rounded shadow p-2">
                    <div class="flex flex-row items-center">
                        <div class="flex-shrink pr-4">
                            <div class="rounded p-3 bg-{{ block.color }}-600"><i class="fa {{ block.icon }} fa-2x fa-fw fa-inverse"></i></div>
                        </div>
                        <div class="flex-1 text-right md:text-center">
                            <h5 class="font-bold uppercase text-{{ block.color }}-500">{{ block.title }}</h5>
                            <h3 class="font-bold text-3xl">
                                {{ random(150, 1000) }}
                                <span class="text-green-500"><i class="fas fa-caret-up"></i></span>
                            </h3>
                        </div>
                    </div>
                </div>
                <!--/Dashboard Card-->
            </div>
            {% endfor %}
        </div>

    </div>

</div>
<!--/Container-->
{% endblock %}